{
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "phpstan/phpstan": "^2.1",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "phpstan/extension-installer": "^1.4",
    "phpro/grumphp": "^2.14"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "phpro/grumphp": true
    }
  },
  "scripts": {
    "post-install-cmd": [
      "composer install --working-dir=plugins/rugby-player-cards --no-interaction --prefer-dist",
      "composer install --working-dir=plugins/sponsors --no-interaction --prefer-dist",
      "vendor/bin/grumphp git:init",
      "if [ -d .git/hooks ]; then cp ./bin/pre-commit .git/hooks/pre-commit; fi"
    ],
    "post-update-cmd": [
      "composer install --working-dir=plugins/rugby-player-cards --no-interaction --prefer-dist",
      "composer install --working-dir=plugins/sponsors --no-interaction --prefer-dist",
      "vendor/bin/grumphp git:init",
      "if [ -d .git/hooks ]; then cp ./bin/pre-commit .git/hooks/pre-commit; fi"
    ]
  }
}
