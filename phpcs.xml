<?xml version="1.0"?>
<ruleset name="Project Rules">

    <!-- Base coding standard -->
    <rule ref="PSR12">
        <exclude name="PSR1.Files.SideEffects"/>
    </rule>

    <!-- Custom line length -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>

</ruleset>

